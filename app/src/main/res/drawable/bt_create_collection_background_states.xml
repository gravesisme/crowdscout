<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/grey1" />
            <padding
                android:left="@dimen/browse_collections_header_create_button_padding"
                android:top="@dimen/browse_collections_header_create_button_padding"
                android:right="@dimen/browse_collections_header_create_button_padding"
                android:bottom="@dimen/browse_collections_header_create_button_padding"
            />
            <stroke
                android:color="#d9d9d9"
                android:width="1dp"
            />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/grey3" />
            <padding
                android:left="@dimen/browse_collections_header_create_button_padding"
                android:top="@dimen/browse_collections_header_create_button_padding"
                android:right="@dimen/browse_collections_header_create_button_padding"
                android:bottom="@dimen/browse_collections_header_create_button_padding"
            />
            <stroke
                android:color="#666666"
                android:width="1dp"
            />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <padding
                android:left="@dimen/browse_collections_header_create_button_padding"
                android:top="@dimen/browse_collections_header_create_button_padding"
                android:right="@dimen/browse_collections_header_create_button_padding"
                android:bottom="@dimen/browse_collections_header_create_button_padding"
            />
            <stroke
                android:color="#d9d9d9"
                android:width="1dp"
            />
        </shape>
    </item>
</selector>
