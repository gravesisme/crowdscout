<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/browse_locations_grid_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/contentMarginLargeVertical"
    android:layout_marginBottom="@dimen/contentMarginLargeVertical"
    android:padding="@dimen/contentMarginLargeHorizontal"
    android:orientation="vertical"
    android:visibility="gone">

    <Button
        style="?attr/buttonStyleInverse"
        android:id="@+id/create_new_location_text_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/contentMarginLargeHorizontal"
        android:layout_marginRight="@dimen/contentMarginLargeHorizontal"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:singleLine="true"
        android:text="@string/create"
    />

</RelativeLayout>
